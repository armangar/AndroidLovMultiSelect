<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ECEFF1"
  android:transitionName="LOV_TRANSITION">

  <androidx.cardview.widget.CardView
    android:id="@+id/toolbar"
    android:layout_width="0dp"
    android:layout_height="@dimen/lov_multi_select_height_toolbar"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/lov_multi_select_btn_back"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/lov_multi_select_background_oval_dark_borderless"
          android:scaleType="centerInside"
          android:translationX="48dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:src="@drawable/lov_multi_select_ic_back_dark"
          tools:translationX="0dp"/>

        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/search_view"
          style="@style/Base.Widget.MaterialComponents.TextInputEditText"
          android:layout_width="0dp"
          android:layout_height="@dimen/lov_multi_select_height_editText"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="#00FFFFFF"
          android:gravity="right|center_vertical"
          android:hint="@string/lov_multi_select_search"
          android:imeOptions="actionSearch|flagNoExtractUi"
          android:maxLines="1"
          android:textColor="@color/lov_multi_select_colors_text_dark"
          android:textColorHint="@color/lov_multi_select_disabledAndHintTextLight"
          android:textSize="14sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/lov_multi_select_btn_clear_search"
          app:layout_constraintRight_toLeftOf="@id/lov_multi_select_btn_back"
          app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/lov_multi_select_btn_clear_search"
          android:layout_width="@dimen/lov_multi_select_config_bottom_height"
          android:layout_height="@dimen/lov_multi_select_config_bottom_height"
          android:layout_marginLeft="8dp"
          android:background="@drawable/lov_multi_select_background_oval_dark_borderless"
          android:scaleType="centerInside"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:src="@drawable/lov_multi_select_ic_clear_light_theme"/>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:indeterminate="true"/>
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:id="@+id/tag_container"
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fadeScrollbars="false"
      android:scrollbarAlwaysDrawVerticalTrack="true"
      android:scrollbarSize="2dp"
      android:scrollbars="vertical"
      android:verticalScrollbarPosition="left">

      <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:container_background_color="#0FFF"
        app:container_border_color="#FFF"
        app:container_border_radius="0dp"
        app:container_border_width="0dp"
        app:container_enable_drag="false"
        app:container_gravity="right"
        app:horizontal_interval="3dp"
        app:tag_background_color="@color/lov_multi_select_color_tag_background"
        app:tag_border_color="#444"
        app:tag_border_width="1dp"
        app:tag_clickable="true"
        app:tag_corner_radius="4dp"
        app:tag_cross_color="@color/lov_multi_select_cross_color"
        app:tag_cross_line_width="2dp"
        app:tag_cross_width="24dp"
        app:tag_enable_cross="true"
        app:tag_ripple_color="#FFF"
        app:tag_ripple_duration="0"
        app:tag_text_color="#FFF"
        app:tag_theme="none"
        app:vertical_interval="4dp"/>
    </androidx.core.widget.NestedScrollView>
  </androidx.cardview.widget.CardView>

  <FrameLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="-8dp"
    app:layout_constraintBottom_toTopOf="@id/lov_multi_select_btn_ok"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tag_container">
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_gravity="center_horizontal|top"
      android:gravity="center"
      android:textColor="@color/lov_multi_select_colors_text_dark"
      android:textSize="14sp"
      android:visibility="gone"/>
  </FrameLayout>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/lov_multi_select_btn_ok"
    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/lov_multi_select_button_bg_blue"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:insetBottom="0dp"
    android:insetTop="0dp"
    android:text=""
    android:textColor="@color/lov_multi_select_colors_flat_button_text_dark_theme"
    android:textSize="14sp"
    app:cornerRadius="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:text="OK"/>

</androidx.constraintlayout.widget.ConstraintLayout>